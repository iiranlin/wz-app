<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_bg_horizon" />

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/corner_8dp_ffffff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/login_title_bg" />

        <LinearLayout
            android:id="@+id/ll_user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名："
                    android:textColor="#1b1f26"
                    android:textSize="@dimen/sp_8" />

                <RelativeLayout
                    android:id="@+id/rl_user"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/corner_4dp_ffffff_solied_dcdfe6"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5">

                    <ImageView
                        android:id="@+id/iv_user"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/login_user" />

                    <EditText
                        android:id="@+id/et_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_toRightOf="@+id/iv_user"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入用户名"
                        android:maxLength="20"
                        android:textColor="#1b1f26"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_8" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码："
                    android:textColor="#1b1f26"
                    android:textSize="@dimen/sp_8" />

                <RelativeLayout
                    android:id="@+id/rl_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/corner_4dp_ffffff_solied_dcdfe6"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5">

                    <ImageView
                        android:id="@+id/iv_pass"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/login_pass" />

                    <EditText
                        android:id="@+id/et_pass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_toRightOf="@+id/iv_pass"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:textColor="#1b1f26"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_8" />

                    <ImageView
                        android:id="@+id/iv_see"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_eye_close" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码："
                    android:textColor="#1b1f26"
                    android:textSize="@dimen/sp_8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/corner_4dp_ffffff_solied_dcdfe6"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/iv_code"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/login_code" />

                        <EditText
                            android:id="@+id/et_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_toRightOf="@+id/iv_code"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="请输入验证码"
                            android:maxLength="20"
                            android:textColor="#1b1f26"
                            android:textColorHint="#999999"
                            android:textSize="@dimen/sp_8" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/corner_4dp_ffffff_solied_dcdfe6">

                        <ImageView
                            android:id="@+id/iv_verification"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_14"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sms_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号："
                    android:textColor="#1b1f26"
                    android:textSize="@dimen/sp_8" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/corner_4dp_ffffff_solied_dcdfe6"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5">

                    <ImageView
                        android:id="@+id/iv_sms_user"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/login_user" />

                    <EditText
                        android:id="@+id/et_sms_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@+id/iv_sms_user"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入手机号"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textColor="#1b1f26"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_8" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码："
                    android:textColor="#1b1f26"
                    android:textSize="@dimen/sp_8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/corner_4dp_ffffff_solied_dcdfe6"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/iv_sms_code"
                            android:layout_width="@dimen/dp_10"
                            android:layout_height="@dimen/dp_10"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/login_code" />

                        <EditText
                            android:id="@+id/et_sms_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_toRightOf="@+id/iv_sms_code"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="请输入验证码"
                            android:maxLength="20"
                            android:textColor="#1b1f26"
                            android:textColorHint="#999999"
                            android:textSize="@dimen/sp_8" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/corner_4dp_ffffff_solied_dcdfe6">

                        <TextView
                            android:id="@+id/tv_sms_verification"
                            android:layout_width="@dimen/dp_78"
                            android:layout_height="@dimen/dp_31"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="获取验证码"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_8" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/corner_4dp_1e38c4"
            android:gravity="center"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_8" />

        <!-- 申请授权按钮 -->
        <TextView
            android:id="@+id/tv_register_apply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/corner_4dp_fff4d5"
            android:gravity="center"
            android:text="申请授权"
            android:textColor="#333333"
            android:textSize="@dimen/sp_8"
            android:drawableLeft="@mipmap/sqm_sqsq"
            android:drawablePadding="@dimen/dp_3"
            android:visibility="visible" />

        <!-- 已通过授权按钮 -->
        <TextView
            android:id="@+id/tv_register_approved"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/corner_4dp_0daa01"
            android:gravity="center"
            android:text="已通过授权"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_8"
            android:drawableLeft="@mipmap/sqm_ytgsq"
            android:drawablePadding="@dimen/dp_3"
            android:visibility="gone" />

        <!-- 授权审核中按钮 -->
        <TextView
            android:id="@+id/tv_register_pending"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/corner_4dp_0d0401"
            android:gravity="center"
            android:text="授权审核中"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_8"
            android:drawableLeft="@mipmap/sqm_sqshz"
            android:drawablePadding="@dimen/dp_3"
            android:visibility="gone" />

        <!-- 已驳回授权按钮 -->
        <TextView
            android:id="@+id/tv_register_rejected"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/corner_4dp_020401"
            android:gravity="center"
            android:text="已驳回授权"
            android:textColor="#333333"
            android:textSize="@dimen/sp_8"
            android:drawableLeft="@mipmap/sqm_ybhsq"
            android:drawablePadding="@dimen/dp_3"
            android:visibility="gone" />

        <!-- 已关闭授权按钮 -->
        <TextView
            android:id="@+id/tv_register_closed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/corner_4dp_0d0401"
            android:gravity="center"
            android:text="已关闭授权"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_8"
            android:drawableLeft="@mipmap/sqm_ygbsq"
            android:drawablePadding="@dimen/dp_3"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_user_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_25">

            <LinearLayout
                android:id="@+id/ll_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_checkbox"
                    android:src="@mipmap/icon_checkbox_normal"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:textColor="#1b1f26"
                    android:textSize="@dimen/sp_8" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:text="使用短信登录 >"
                android:textColor="#1e38c4"
                android:textSize="@dimen/sp_8" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sms_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_25"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_sms_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:text="用户名密码登录 >"
                android:textColor="#1e38c4"
                android:textSize="@dimen/sp_8" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>